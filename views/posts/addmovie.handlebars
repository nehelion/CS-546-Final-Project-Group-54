<link rel="stylesheet" href="/public/css/site.css" type="text/css">
<script type="text/javascript" src="/public/js/additionalField.js"></script>

<head>
    <title>Add a Movie Page</title>
</head>
<header>
    <a href="/private">
        <h1>FILM FORAY</h1>
    </a>
</header>
<div class="addmovie-container">
    <h2>Add a Movie</h2>
    <p id="error" class="error">{{error}}</p>
    <!--<button onclick="addGenre()">Add genre</button>-->
    <form method="POST" id="add-movie-form" action="/addmovie">
        <label class="label" for="movieTitle">Movie Title:
            <input type="text" id="movieTitle" name="movieTitle" />
        </label>

        <label class="label" for="releaseYear">Year Released:
            <input type="number" id="releaseYear" name="releaseYear" />
        </label>

        <ul id="genreList">
          <li>
						<label class="label" for="genre">Genre:
							<select id="genre" name="genre">
								<option value="Action">Action</option>
								<option value="Comedy">Comedy</option>
								<option value="Drama">Drama</option>
								<option value="Horror">Horror</option>
								<option value="Scifi">Sci/Fi</option>
								<option value="Romance">Romance</option>
            </select>
						</label>
					</li>
        </ul>
        <button type="button" onclick="addGenre()">Add genre</button>
        <br /><br />

        <label class="label" for="rating">IMDB Rating:
            <input type="number" id="rating" name="rating" />
        </label>

        <label class="label" for="description">Movie Description:
            <textarea rows="5" cols="63" id="description" name="description">
         </textarea>
        </label>

        <ul id="actorsList">
            <li><label class="label" for="actors">Actors:
                    <input type="text" id="actors" name="actors" />
                </label></li>
        </ul>
        <button type="button" onclick="addActors()">Add actor</button>
        <br /><br />

        <ul id="directorsList">
            <li><label class="label" for="directors">Directors:
                    <input type="text" id="directors" name="directors" />
                </label></li>
        </ul>
        <button type="button" onclick="addDirectors()">Add directors</button>
        <br /><br />

        <ul id="whereToWatchList">
            <li><label class="label" for="whereToWatch">Where To Watch:
                    <input type="text" id="whereToWatch" name="whereToWatch" />
                </label></li>
        </ul>
        <button type="button" onclick="addWhereToWatch()">Add where to watch</button>
        <br /><br />

        <button class="open-page-button" type="submit">+ Add a Movie</button>
    </form>
</div>
